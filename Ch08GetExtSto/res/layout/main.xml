<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	    
	<TextView  android:id="@+id/tvIdFlowPath"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="10dp"
	    android:text="原始照片路徑：res/drawable/flower01.jpg" />	        
   	<ImageView android:id="@+id/ivIdFlow"
		android:layout_width="300sp" 
		android:layout_height="200sp" />     
    <Button android:id="@+id/btIdSvPub"
    	android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="儲存至公有照片區" />
    <Button android:id="@+id/btIdRdPub"
    	android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="從公有照片區讀取照片" />
</LinearLayout>
