<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView  android:id="@+id/tvIdFilePath"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="10dp"
	    android:text="原始檔案路徑： assests/intro.txt" />	        
    <TextView   android:id="@+id/tvIdIntro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  />
	
    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

        <Button android:id="@+id/btIdSave"
	    	android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:textSize="12sp"
		    android:text="儲存檔案到內部記憶體" />	    
	    <Button android:id="@+id/btIdRead"
	    	android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:textSize="12sp"
		    android:text="自內部記憶體讀檔案" />
	</LinearLayout>	    
</LinearLayout>
