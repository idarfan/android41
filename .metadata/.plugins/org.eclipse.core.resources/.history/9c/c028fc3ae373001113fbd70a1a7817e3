<script>
$(document).ready(function() {
    var options = {
        chart: {
            renderTo: 'container',
            defaultSeriesType: 'column',
            rightMargin: 80
        },

        title: {
            text: '101 上半年度'
        },
        subtitle: {
            text: '資料來源: 101年度'
        },
         xAxis:{
