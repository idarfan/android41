        categories:[]
    },
        yAxis: [
            {
                min: 0,
                title: {
                    text: '學生人數'
                 }
            },
            {
                linkedTo: 0,
                opposite: true
            }
        ],
        tooltip: {
            formatter: function() {
                return '<b>'+ this.series.name +'</b><br/>'+              
