Ext.onReady(function() {
	Ext.define('student', {
    extend: 'Ext.data.Model',
    fields: ['month', 'total']
});

//The Store contains the AjaxProxy as an inline configuration
var store = Ext.create('Ext.data.Store', {
    model: 'student',
    proxy: {
        type: 'ajax',
        url : 'http://localhost:3000/students/givemechart.json',
        root : student
    }
});
	
			

			Ext.create('Ext.window.Window', {
				title : '月份學生人數統計',
				width : 500,
				height : 300,
				layout : 'fit',
				maximizable : true,

				items : {
					xtype : 'chart',
					style : 'background:#fff',
					animate : true,
					shadow : true,
					store : store,
					axes : [{
								type : 'Numeric', 								
								position : 'left',
								fields : ['total'],
								title : '人數',
								grid : true
								//minimum : 0
							}, {
								type : 'Category',
								position : 'bottom',
								fields : ['month'],
								title : '月份'
							}],
					legend : {
						position : 'right'
					},
					series : [{
						type : 'column',
						axis : 'left',
						highlight : true,
						tips : {
							trackMouse : true,
							width : 140,
							height : 28,
							renderer : function(storeItem, item) {
								this.setTitle(storeItem.get('month') + ': '
										+ storeItem.get('total') + ': 人數' );
							}
						},
						xField : 'month',
						yField : 'total',
						showInLegend : true
					}]
				}
			}).show();
		});