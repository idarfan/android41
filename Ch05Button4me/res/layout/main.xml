<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvPtName"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/etIdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterYourName_tw"
        android:inputType="textNoSuggestions" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvIdSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvPtSex"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etIdSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterYourSex_tw"
        android:inputType="textNoSuggestions" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btIdSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btPtSure" />

</LinearLayout>